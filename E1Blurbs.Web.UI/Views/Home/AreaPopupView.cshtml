<div class="modal fade" id="createarea" tabindex="-1" role="dialog" aria-labelledby="Add area" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 id="popupLabel" data-bind="with: Product">
                    Add area to product: <span data-bind="    text: Name"></span>
                    @*                    <span data-bind="    text: Code"></span>*@
                </h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <em>Please choose a parent area:</em>
                    <ul class="nav nav-pills nav-stacked sidenav subarea" data-bind="foreach: AreaList, visible: AreaList().length">
                        <li class="clearfix">
                            <a data-bind=" click: $root.setNewParentArea, text: Name, attr: { href: '#' + AreaId }"></a>
                            <ul class="nav nav-pills nav-stacked" data-bind="foreach: ChildAreaList, visible: ChildAreaList().length ">
                                <li class="clearfix">
                                    <a data-bind="attr: { href: '#' + AreaId }, click: $root.setNewParentArea"><span data-bind="    text: Name"></span></a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="row" data-bind="with: $root.NewParentArea">
                    <div class="input-group">
                        <span class="input-group-addon">Parent Area</span>
                        <input type="text" class="form-control" readonly="readonly" data-bind="value: Name" />
                    </div>
                    <div class="input-group">
                        <span class="input-group-addon">Area Name</span>
                        <input type="text" class="form-control" data-bind="placeholder: 'Type here to add area name', value: $root.NewAreaName" />
                    </div>
                    <p class="text-danger" data-bind="visible: errorMessage, text: errorMessage"></p>
                </div>
            </div>
            <div class="modal-footer">
                <button class="btn btn-primary" data-bind="click: $root.addArea">Done</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="editarea" tabindex="-1" role="dialog" aria-labelledby="Edit area" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" data-bind="with: ActiveArea">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4>Edit Area                        
                    <span data-bind="visible: ProcessStatus, css: { sloading: ProcessStatus() == 1 }"></span>
                </h4>
            </div>
            <div class="modal-body">
                <div class="input-group">
                    <span class="input-group-addon">Area Name</span>
                    <input type="text" data-bind="placeholder: 'Type here to add area name', value: NewName" class="form-control" placeholder="Type here to add area name">
                </div>
            </div>
            <div class="modal-footer">
                <div class="btn-group">
                    <button class="btn btn-sm btn-default" data-bind="click: $root.clickDeleteArea">Remove this area</button>
                    <button class="btn btn-primary btn-sm" data-bind="click: $root.updateArea">Update area name</button>
                </div>
                <p class="text-danger" data-bind="visible: errorMessage, text: errorMessage"></p>
                <div class="alert alert-danger" style="display: none;">
                    <p>You will remove all blurbs under this area. Are you sure to continue ?</p>
                    <div class="btn-group">
                        <button class="btn btn-danger btn-sm" type="button" data-bind="click: $root.deleteArea">Yes</button>
                        <button class="btn btn-default btn-sm" type="button" data-bind="click: $root.closeAlert">No</button>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>
