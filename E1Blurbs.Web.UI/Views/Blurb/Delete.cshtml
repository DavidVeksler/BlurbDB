@model Blurb

@{
    ViewBag.Title = "Delete Blurb";
}

<h2>Are you confirm to delete blurb item [@Model.DefaultText]?</h2>

@using (Html.BeginForm())
{
    <input id="btnDelete" type="submit" value="OK" />
    <input id="btnCancel" type="button" value="Cancel" />
}

<script type="text/javascript">
    //<![CDATA[
    $(document).ready(function () {
        $("#btnCancel").click(function (e) {
            e.preventDefault();
            window.history.back();
        });
    });
    //]]>
</script>