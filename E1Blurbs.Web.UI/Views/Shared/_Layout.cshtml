@using E1Blurbs.Web.UI.Extensions

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css/sitecss")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <header class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/">BlurbDBs Editor</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav">
                    <li class="@Html.GetCurrentTabCssClass("Home")">@Html.ActionLink("Edit Blurbs", "Index", "Home")</li>
                    <li class="@Html.GetCurrentTabCssClass("Sync")">@Html.ActionLink("Sync Blurbs", "Index", "Sync")</li>
                    <li class="@Html.GetCurrentTabCssClass("Import")">@Html.ActionLink("Import/Export with Excel", "Index", "Import")</li>
                </ul>
                @if (Html.IsCurrent("Home"))
                {
                    @Html.Partial("ProductListView")
                }
            </div>
        </div>
    </header>
    <div id="body" class="container">
        @RenderBody()
    </div>

    @Scripts.Render("~/bundles/basic")

    @RenderSection("ScriptResource", false)

    <script type="text/javascript">
        //<![CDATA[
        $(document).ready(function () {
            @RenderSection("Scripts", required: false)
        });
        //]]>
    </script>
</body>
</html>
